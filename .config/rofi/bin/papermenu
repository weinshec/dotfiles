#!/bin/sh

rofi_command="rofi -p MANUALS -dmenu"

root=$HOME/library/manuals

find_pdfs() {
  cd "${root}" || exit
  list=(**/*.pdf)
  printf '%s\n' "${list[@]%}" | sort -n
}

open_pdf() {
  zathura "${root}/$1"
}

selected_pdf="$(find_pdfs 2>/dev/null | $rofi_command)"

if [[ $? == "0" ]]; then
  open_pdf $selected_pdf
fi
