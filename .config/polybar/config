;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================
[include]
include-file = $HOME/.config/polybar/config_local


[colors]
background     = #222222
background-alt = #444444
foreground     = #dfdfdf
foreground-alt = #555555
primary        = #ffb52a
secondary      = #e60053
alert          = #bd2c40
high           = #268bd2


[settings]
screenchange-reload = true


[global/wm]
margin-top = 5
margin-bottom = 5


[bar/main]
bottom = true
width = 100%
height = 27
offset-x = 0
offset-y = 0
radius = 6.0
fixed-center = true

monitor = ${env:POLYBAR_MONITOR:}

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00
underline-size = 2
underline-color = ${colors.high}

border-size = 4
border-color = #00000000

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 2

font-0 = Roboto:pixelsize=10;0
font-1 = FontAwesome:pixelsize=11;0

modules-left = i3
modules-center = date
modules-right = ${local.modules}

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

cursor-click = pointer
cursor-scroll = ns-resize


[module/mail]
type = custom/script
interval = 10
; exec = notmuch count tag:unread
exec = echo "$(notmuch count tag:unread) / $(notmuch count tag:flagged)"

format = <label>
format-underline = ${colors.high}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/timetracking]
type = custom/script
interval = 2
exec = echo "$(tail $TIMELOG -n 1 | cut -d' ' -f 4) ($(ledger -f $TIMELOG balance --period today | tail -n 1 | xargs))"

format = <label>
format-underline = ${colors.high}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = ${local.netif_eth}
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.high}
format-connected-prefix = " "
format-connected-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
label-connected-foreground = ${colors.high}

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.alert}
format-disconnected-prefix = " "
format-disconnected-foreground = ${colors.foreground-alt}
label-disconnected = "offline"
label-disconnected-foreground = ${colors.foreground-alt}


[module/wlan]
type = internal/network
interface = ${local.netif_wlan}
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.high}
format-connected-prefix = " "
format-connected-foreground = ${colors.foreground-alt}
label-connected = %essid%
label-connected-foreground = ${colors.high}

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.alert}
format-disconnected-prefix = " "
format-disconnected-foreground = ${colors.foreground-alt}
label-disconnected = "offline"
label-disconnected-foreground = ${colors.foreground-alt}


[module/cpu]
type = internal/cpu
interval = 1

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.high}

label = %percentage:2%%


[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
warn-temperature = 85

format = <label>
format-underline = ${colors.high}
format-warn = <label-warn>
format-warn-underline = ${colors.alert}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 95
time-format = %H:%M

format-full = <label-full>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.high}
label-full = 100%

format-charging = <label-charging>
format-charging-prefix = " "
format-charging-prefix-foreground = ${colors.foreground-alt}
format-charging-underline = ${colors.high}
label-charging = %percentage%% (%time%)

format-discharging = <label-discharging>
format-discharging-prefix = " "
format-discharging-prefix-foreground = ${colors.foreground-alt}
format-discharging-underline = ${colors.primary}
label-discharging = %percentage%% (%time%)


[module/volume]
type = internal/pulseaudio
mapped = true

format-volume = <label-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.foreground-alt}
format-volume-underline = ${colors.high}
label-volume = %percentage%%

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
format-muted-underline = ${colors.alert}
label-muted = mute


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.high}

label-layout = %layout%
label-layout-underline = ${colors.high}


[module/date]
type = internal/date
interval = 1

; date = %d-%b-%Y
date = %Y-%m-%d
time = %H:%M:%S

; format-prefix = "TS "
; format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.high}

label = %date%    %time%


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
strip-wsnumbers = true
fuzzy-match = true
pin-workspaces = true

ws-icon-0 = BRWS;
ws-icon-1 = CODE;
ws-icon-2 = TERM;
ws-icon-3 = W4; 4
ws-icon-4 = W5; 5
ws-icon-5 = W6; 6
ws-icon-6 = SETS;
ws-icon-7 = PLAY;
ws-icon-8 = PERS;
ws-icon-9 = MAIL;
ws-icon-10 = W11; F1
ws-icon-11 = W12; F2
ws-icon-12 = W13; F3
ws-icon-13 = W14; F4
ws-icon-14 = W15; F5
ws-icon-15 = W16; F6
ws-icon-16 = W17; F7
ws-icon-17 = W18; F8
ws-icon-18 = W19; F9
ws-icon-19 = W20; F10

label-mode-padding = 2
label-mode-foreground = ${colors.primary}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %icon%
; label-focused = %name%
label-focused-underline = ${colors.high}
label-focused-background = ${colors.background-alt}
label-focused-padding = 4

; unfocused = Inactive workspace on any monitor
label-unfocused =  %icon%
; label-unfocused = %name%
label-unfocused-padding = 4
; label-unfocused-underline = ${colors.high}

; visible = Active workspace on unfocused monitor
label-visible =  %icon%
; label-visible = %name%
label-visible-padding = 4
label-visible-underline = ${colors.high}

; urgent = Workspace with urgency hint set
label-urgent =  %icon%
; label-urgent = %name%
label-urgent-underline = ${colors.alert}
label-urgent-padding = 4


[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.high}

label = %percentage%%



