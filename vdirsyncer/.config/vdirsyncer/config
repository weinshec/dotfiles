[general]
status_path = "~/.vdirsyncer/status/"


[pair weinshec_contacts]
a = "weinshec_contacts_local"
b = "weinshec_contacts_remote"
collections = ["from a", "from b"]
metadata = ["displayname", "color"]
#conflict_resolution = null

[storage weinshec_contacts_local]
type = "filesystem"
path = "~/.contacts/weinshec/"
fileext = ".vcf"

[storage weinshec_contacts_remote]
type = "carddav"
url = "https://radicale.holodeck2.de/weinshec/"
username = "weinshec"
password.fetch = ["command", "pass", "holodeck2/radicale/weinshec"]



